<br />

<% if !current_user.enrolled_courses.empty?%>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-12">
    <h1>What I'm Learning</h1>
  </div>
  <hr>
  <br class="clr">
  <br>
  <% current_user.enrolled_courses.each do |course| %>
  <div class="col-xs-12 col-md-6">
    <%= image_tag course.image, class: 'img-responsive' %>
  </div>
  <div class="col-xs-12 col-md-6"></div>
  <h3 class="instructor-course-title">
    <%= link_to course.title, course_path(course) %>
  </h3>
  
  <%= course.description %>
  <br />
  <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primar' %>
  
  <% end %>
</div>
<% else %>
<div class="red-booyah-box col-xs-10 col-xs-offset-1">
  <h2 class=" col-sm-8">Looks Like You are not enrolled in any classes.</h2>
  <%= link_to "See All Courses", courses_path, class: 'btn btn-lg btn-danger  col-sm-4 dashboard-error-button' %>
  
</div>
<% end %>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="col-xs-12">
    <h1>What I'm Teaching</h1>
  </div>
  <hr>
  <br class="clr">
  <br>
  <% current_user.courses.each do |course| %>
  <div class="col-xs-12 col-md-6">
    <%= image_tag course.image, class: 'img-responsive' %>
  </div>
  <div class="col-xs-12 col-md-6">
    <h3 class="instructor-course-title">
      <%= link_to course.title, course_path(course) %>
    </h3>
    
    <%= course.description %>
    <br /><br />
    <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
  </div>
  <br class="clr">
  <br>
  <hr>
  <br>
  <% end %>
  
</div>
