<br />



<% if !current_user.enrolled_courses.empty?%>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
  <h3 class="text-center">
    <%= link_to course.title, course_path(course) %>
  </h3>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>
  <br />
  <div class="col-xs-12 col-sm-8">
    <%= course.description %>
  </div>
  <div class="col-xs-12 col-sm-4 text-center">
    <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary ' %>
    <hr class="col-xs-8 col-xs-offset-2">
    <br class="clr" / >
  </div>
  
  <% end %>
</div>
<% else %>
<div class="red-booyah-box col-xs-10 col-xs-offset-1">
  <h2 class=" col-sm-8">Looks Like You are not enrolled in any classes.</h2>
  <%= link_to "See All Courses", courses_path, class: 'btn btn-lg btn-danger  col-sm-4 dashboard-error-button' %>
  <% end %>
</div>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
  <h3 class="text-center">
    <%= link_to course.title, course_path(course) %>
  </h3>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>
  <br />
  <div class="col-xs-12 col-sm-8">
    <%= course.description %>
  </div>
  <div class="col-xs-12 col-sm-4 text-center">
    <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
  </div>
  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clr" / >
  <% end %>
  
</div>
