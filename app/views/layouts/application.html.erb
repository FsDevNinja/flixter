<!DOCTYPE html>
<html>
<head>
  <title>CourseHub</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
  <script src="https://vjs.zencdn.net/5.0.2/video.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.6/jquery.fullPage.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.6/vendors/scrolloverflow.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.8.6/jquery.fullPage.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  
</head>
<body>
  <% if current_page?(root_url) %>
  <%= render partial: 'layouts/home_nav' %>
  <% else %>
  <%= render partial: 'layouts/nav' %>
  <% end %>
  <% if notice.present? %>
  <p class="alert alert-info fixed"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
  <p class="alert alert-danger fixed"><%= alert %></p>
  <% end %>
  
  <%= yield %>
  <% if current_page?(root_url) %>
  
  <% else %>
  <%= render partial: 'layouts/footer' %>
  <% end %>
  
  
  <script>(function($){
    function floatLabel(inputType){
      $(inputType).each(function(){
        var input = $(this).find("input, select, textarea");
        var label = $(this).find("label");
        // on focus add cladd active to label
        input.focus(function(){
          input.next().addClass("active");
          console.log("focus");
        });
        //on blur check field and remove class if needed
        input.blur(function(){
          if(input.val() === '' || input.val() === 'blank'){
            label.removeClass();
          }
        });
      });
    }
    // just add a class of "floatLabel to any group you want to have the float label interactivity"
    floatLabel(".float-label");
    
    
    $('.dark-mobile_nav').click(function() {
      $(".dark-mobile_nav_menu").animate({right: 0});
    });
    $(".dark-mobile_close").click(function() {
      $(".dark-mobile_nav_menu").animate({right: -270});
    });
    
    
    
    
  })(jQuery);</script>
  
  
</body>
</html>
